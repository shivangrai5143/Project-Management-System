rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuth();
      allow write: if isAuth() && request.auth.uid == userId;
    }

    // Projects collection
    match /projects/{projectId} {
      allow read: if isAuth();
      allow create: if isAuth();
      allow update, delete: if isAuth();
    }

    // Tasks collection
    match /tasks/{taskId} {
      allow read: if isAuth();
      allow create: if isAuth();
      allow update, delete: if isAuth();
    }

    // Chat messages collection
    match /chatMessages/{messageId} {
      allow read: if isAuth();
      allow create: if isAuth();
      allow delete: if isAuth();
    }

    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isAuth();
      allow create: if isAuth();
      allow update, delete: if isAuth();
    }

    // Standups collection
    match /standups/{standupId} {
      allow read: if isAuth();
      allow create: if isAuth();
    }

    // Standup settings collection
    match /standupSettings/{userId} {
      allow read: if isAuth() && request.auth.uid == userId;
      allow write: if isAuth() && request.auth.uid == userId;
    }

    // Whiteboards collection
    match /whiteboards/{projectId} {
      allow read: if isAuth();
      allow write: if isAuth();
    }
  }
}
